@import 'variables'
@import 'overrides'
@import 'animations'

@import 'content'
@import 'menu'
@import 'toggles'

@import 'sidebars'
@import 'leftbar'
@import 'rightbar'

// TODO: refactor this into a separate file.

stripe-bezier ?= cubic-bezier(0.41, 1.34, 0.51, 1.01)

a.highlight, a.note
  background: #ddd

a.highlight
  color: inherit

#selectionbar
  .triangle > i
    position: absolute
    top: -3px
    left: 50%
    transform: translateX(-50%) rotateZ(90deg)
    color: #222
  
  perspective: 20em
  
  height: 0
  width: 250px
  
  // transition: transform .4s stripe-bezier, opacity .4s ease
  
  position: fixed
  top: 8rem
  left: 50%
  transform: translateX(-50%) translate3d(0,2em,0)
  
  @media (min-width: 1200px)
    position: absolute
    top: 50%
    left: 50%
    transform: translateX(-50%) translate3d(0,-2em,0)
  
  opacity: 0
  z-index: -100
  
  &.active
    z-index: 100
    opacity: 1
    transform: translateX(-50%) translate3d(0,0,0)
  
  &.add-note
    transform: translateX(-50%) translate3d(0,-1em,0)
    
    @media (min-width: 1200px)
      transform: translateX(-50%) translate3d(0,1em,0)
    
    .buttons
      .regular-buttons
        transform: translate3d(0,-3em,0)
      .note-buttons
        transform: translate3d(0,-3em,0)
    
    .note-area
      transform: rotateX(0deg)
      opacity: 1
    
  
  .buttons
    background: #222
    height: 3em
    overflow: hidden
    width: 100%
    
    position: absolute
    top: 0
    
    @media (min-width: 1200px)
      top: auto
      bottom: 0
    
    .btn-group
      height: 1.5em
      // transition: transform .4s stripe-bezier
  
  .btn
    font-size: 1.5em
    border: none
    border-radius: 0
    background: #222
    color: white
    
    border-left: 1px solid #111
    border-right: 1px solid #111
    
    &[disabled="true"]
      opacity: 1
      background: #333
      color: #999
  
  .note-area
    -webkit-appearance: none
    
    border-radius: 5px 5px 0 0
    width: 100%
    resize: none
    padding: 0.5em
    background: white
    border: none
    height: 9em
    font-family: "Lucida Grande", "Lucida Sans Unicode", "Lucida Sans", Geneva, Verdana, sans-serif
  
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3)
    
    // transition: transform .4s stripe-bezier
  
    transform-origin: 0 0
    transform: rotateX(-90deg)
    opacity: 0
    
    position: absolute
    top: 3em
    
    @media (min-width: 1200px)
      top: -12em
      transform-origin: 100% 100%
      transform: rotateX(90deg)
  
