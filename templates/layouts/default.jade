!!!
html
  head
    meta(charset='utf8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")

    title Textbook

    +css-ext("http://fonts.googleapis.com/css?family=Open+Sans:400,600&subset=latin-ext,latin")
    +css("lfa-components/bootstrap/css/bootstrap.min.css")
    +css("lfa-components/font-awesome/css/font-awesome.min.css")
    +css("css/master.css")
  body
    .container
      .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .container
          .navbar-header
            button(type="button", class="btn btn-link navbar-btn pull-left visible-sm visible-xs", data-toggle="offcanvas")
              i.icon-large.icon-align-justify
            a.navbar-brand Textbook
    
      .row.row-offcanvas
        aside.col-md-4.col-sm-9
          .sidebar
            +toc(toc)
        .col-md-8.col-sm-12
          div(class="content textbook")
            != content

    +js-require("lfa-components/lfa-js/main", "js/require.js")

    //- this must be included for live reload to work in developement
    //- it will be automatically ignored when deployed
    != livereload
